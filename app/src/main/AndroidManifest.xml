<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.cned.emdsgil.suividevosfrais">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activités.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="recipe-app.com"
                    android:pathPrefix="/recipes"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".Activités.HfActivity" />
        <activity android:name=".Activités.HfRecapActivity" />
        <activity android:name=".Activités.KmActivity" />
        <activity  android:name=".Activités.ForfaitEtapeActivity" />
        <activity  android:name=".Activités.NuiteeHotelActivity" />
        <activity  android:name=".Activités.RepasRestaurantActivity" />
        <activity  android:name=".Activités.AuthActivity" />

    </application>

</manifest>